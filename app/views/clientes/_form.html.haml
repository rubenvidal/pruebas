= form_for @cliente do |f|
  -if @cliente.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cliente.errors.count, "error")} prohibited this cliente from being saved:"
      %ul
        - @cliente.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :fecha_alta
    = f.date_select :fecha_alta
  .field
    = f.label :morosidad
    = f.text_field :morosidad
  .actions
    = f.submit 'Save'
